# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{csproj}]
indent_size = 2

[*.{xml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{htm,html,js,ts,tsx,css,sass,scss,less,svg,vue}]
indent_size = 2
